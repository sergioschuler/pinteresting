<%= link_to 'Back', pins_path %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
    <div class="panel-heading center">
      <%= image_tag @pin.image.url, class: "show-image" %>
    </div>
    <div class="panel-body">
    <p><%= @pin.description %></p>
    <p>
      <% if @pin.user %>
        <% if @pin.user.avatar.file? %>
          <%= link_to image_tag(@pin.user.avatar.url(:thumb)), user_path(@pin.user) %>
        <% else %>
          <%= link_to image_tag(image_path('image_missing.png'), class: "missing-thumb"), user_path(@pin.user) %>
        <% end %>
        <%= link_to @pin.user.display_name, user_path(@pin.user) %>
      <% end %>
    </p>

    <% if @pin.user == current_user %>
      <%= link_to edit_pin_path(@pin) do %>
        <span class="glyphicon glyphicon-edit"></span>
        Edit
      <% end %>
    <% end %>
    </div>
  </div>

</div>
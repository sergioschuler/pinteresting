<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-2">
		<div id="profile" class="panel panel-standard">
			<% if @user.avatar.file? %>
				<%= image_tag @user.avatar.url(:medium) %>
			<% else %>
				<%= image_tag image_path('image_missing.png') %>
			<% end %>
			<div class="panel-body">
				<h1><%= @user.display_name %></h1>
				<p><%= @user.bio %></p>
			</div>
		</div>
	</div>
	<div class="col-md-10">
		<%= render 'pins/pins' %>
	</div>
</div>